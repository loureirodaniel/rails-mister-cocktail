  <h1><%= @cocktail.name %> Cocktail</h1>
  <p>Get Started!</p>



<div class="container text-center">
  <div class="row">
    <% @cocktail.doses.each do |dose| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card text-center" style="background-image: url('http://www.seriouseats.com/images/2014/11/20141104-cocktail-party-old-fashioneds-holiday-vicky-wasik-3.jpg')">
          <div class="card-header">
            <%= link_to @cocktail.name, cocktail_path(@cocktail) %>
            <img class="card-user avatar img-circle" src="http://unsplash.it/50/50">
          </div>
          <div class="card-body">
            <%= @cocktail.name %>
            <% @cocktail.doses.each do |dose| %>
            <%= dose.description %>
            <%= dose.ingredient.name  %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to "Delete Dose", dose_path(dose),
method: :delete,
data: { confirm: "are you sure" } %>
<% end %>


<%= link_to "add dose", new_cocktail_dose_path(@cocktail) %>

<%= link_to "back", cocktail_path(@cocktail) %>
