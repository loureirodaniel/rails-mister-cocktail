<h1 class="text-center">Cocktails Index</h1>
<div class="text-center padded">
  <%= link_to "Add a Cocktail", new_cocktail_path, class: "btn btn-danger" %>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card text-center" style="background-image: url('http://www.seriouseats.com/images/2014/11/20141104-cocktail-party-old-fashioneds-holiday-vicky-wasik-3.jpg')">
        <div class="card-header">
          <%= cocktail.name %>
          <img class="card-user avatar img-circle" src="http://unsplash.it/50/50">
        </div>
        <div class="card-body">
        </div>
        <div class="card-footer">
          <%= link_to "view details", cocktail_path(cocktail) %>
        </div>
        </div>
      </div>

    <% end %>
  </div>
</div>
